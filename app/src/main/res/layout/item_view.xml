<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/opennote"
    android:layout_width="match_parent"

    android:layout_height="wrap_content"
    android:padding="10dp"
    android:layout_marginBottom="10dp"
    android:background="@drawable/rounded_corner"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/titleoutput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#858FCDFD"
        android:padding="10dp"
        android:lines="1"
        android:textStyle="bold"
        android:textColor="@color/black"
        tools:text="My title"/>



        <TextView
            android:id="@+id/descriptionoutput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/titleoutput"
            android:textIsSelectable="true"
            android:padding="5dp"
            android:scrollbars="vertical"
            android:textColor="@color/black"
            tools:text="My long Description" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/timeoutput"
        android:layout_below="@+id/descriptionoutput"
        android:textSize="12dp"
        android:gravity="end"
        android:textColor="@color/black"
        tools:text="Feb 21 2023"/>



</RelativeLayout>